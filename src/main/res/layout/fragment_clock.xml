<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:padding="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_day_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_date_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/time_placeholder"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_date_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/time_placeholder"
            android:textSize="18sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_work_time_policy_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/line_and_outline_grey"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_policy_title_label"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/work_time_policy_title" />

        <TextView
            android:id="@+id/tv_work_time_policy_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/tv_policy_title_label"
            android:text="@string/work_time_policy" />

        <RadioGroup
            android:id="@+id/rg_work_time_policy_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_policy_title_label" />

        <!--Check-in Time-->
        <LinearLayout
            android:id="@+id/ll_work_time_policy_check_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rg_work_time_policy_set"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_work_time_policy_check_in_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/work_time_policy_check_in_label" />

            <TextView
                android:id="@+id/tv_work_time_policy_check_in_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="@string/time_placeholder" />
        </LinearLayout>

        <!--Latest check-in Time-->
        <LinearLayout
            android:id="@+id/ll_work_time_policy_latest_check_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rg_work_time_policy_set"
            android:layout_toEndOf="@id/ll_work_time_policy_check_in"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_work_time_policy_latest_check_in_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="@string/work_time_policy_latest_check_in_label"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_work_time_latest_check_in_label_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="@string/time_placeholder"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_work_time_policy_check_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_work_time_policy_check_in"
            android:orientation="horizontal">
            <!--Check-out Time-->
            <TextView
                android:id="@+id/tv_work_time_policy_check_out_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/work_time_policy_check_out_label" />

            <TextView
                android:id="@+id/tv_work_time_policy_check_out_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="@string/time_placeholder" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_check_in_and_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@android:color/background_light"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_real_check_in_label"
                android:layout_width="100dp"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="@string/real_check_in" />

            <TextView
                android:id="@+id/tv_real_check_in_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_real_check_in_label"
                android:hint="@string/time_placeholder" />

            <TextView
                android:id="@+id/is_late"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_real_check_in_value"
                android:hint="" />

            <Button
                android:id="@+id/btn_check_in"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/btn_check_in_modify"
                android:text="@string/action_check_in" />

            <Button
                android:id="@+id/btn_check_in_modify"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/action_modify_time" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_plan_check_out_time_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/plan_checkout" />

            <TextView
                android:id="@+id/tv_plan_check_out_time_value"
                android:layout_toEndOf="@+id/tv_plan_check_out_time_label"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/time_placeholder" />

            <Button
                android:id="@+id/btn_check_out"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/btn_check_out_modify"
                android:text="@string/action_check_out" />

            <Button
                android:id="@+id/btn_check_out_modify"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/action_modify_time" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>