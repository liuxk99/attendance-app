<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/clock_button_go_to_work"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/text_clock_go_to_work"/>
    <Button
        android:id="@+id/clock_button_come_off_work"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/text_clock_come_off_work"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上班时间 ： "/>
        <TextView
            android:id="@+id/clock_text_work_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00:00" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预计下班 ： "/>
        <TextView
            android:id="@+id/clock_text_back_work_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00:00" />

    </LinearLayout>
</LinearLayout>