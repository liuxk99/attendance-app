<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".WorkTimePolicySetEditor">

    <TextView
        android:id="@+id/tv_policy_set_title_value"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        android:textColor="@color/light_black"
        android:background="#ccc"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <org.fw.attendance.WorkTimePolicySetView
        android:id="@+id/rv_policy_set_view"
        android:background="#ddd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_policy_set_title_value" />

</androidx.constraintlayout.widget.ConstraintLayout>